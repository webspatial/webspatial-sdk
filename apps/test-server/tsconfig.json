{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@webspatial/react-sdk",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "web-spatial": ["../npmLib/src"],
      "@webspatial/react-sdk": ["../../packages/react/src"],
      "@webspatial/react-sdk/jsx-runtime": [
        "../../packages/react/src/jsx/jsx-runtime.ts"
      ],
      "@webspatial/core-sdk": ["../../packages/core/src"]
    }
  },
  "include": [
    "src",
    "../../packages/core/src/types/*.d.ts",
    "../../packages/react/src/types/*.d.ts"
  ],
  "exclude": ["node_modules"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
