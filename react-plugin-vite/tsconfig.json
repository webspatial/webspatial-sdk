{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    /* Linting */
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "references": []
}
